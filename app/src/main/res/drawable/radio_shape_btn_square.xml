<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#00F4F3EE"/>
            <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>
            <stroke android:width="3dp" android:color="#9480D8FF"/>
        </shape>
    </item>
    <item android:state_checked="true" >
        <shape android:shape="rectangle" >
            <solid android:color="#9480D8FF"/>
            <corners android:topLeftRadius="10dp" android:bottomLeftRadius="10dp"/>
            <stroke android:width="2dp" android:color="#9480D8FF"/>
        </shape>
    </item>

</selector>
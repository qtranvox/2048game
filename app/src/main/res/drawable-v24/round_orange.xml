<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient android:startColor="#9AF8805F"
                android:centerColor="#DA6D13"
                android:endColor="#D2F77C5A"
                android:angle="270"/>
            <stroke android:color="@color/valueEmpty"
                android:width="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient android:startColor="#CCF8805F"
                android:centerColor="#CCEF6C00"
                android:endColor="#CCF77C5A"
                android:angle="270"/>
            <corners android:radius="20dp"/>
            <stroke android:color="@color/valueOther"
                android:width="1dp"/>
        </shape>
    </item>

</selector>